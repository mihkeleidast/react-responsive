{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "es6"],
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "rootDir": "./src",
    "declaration": false,
    "esModuleInterop": true,
    "paths": {
      "shallow-equal": ["./src/@types/shallow-equal"]
    }
  },
  "include": ["src"],
  "exclude": ["test", "node_modules"]
}
